<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddresActivity"
    android:background="@drawable/details_company_name">

    <TextView
        android:id="@+id/addres_company_address_textview"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Enter Company Address"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:textSize="26dp"
        android:textStyle="bold"
        android:textColor="#67E6DC"
        />

    <EditText
        android:id="@+id/addres_company_address_edit_text"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/addres_company_address_textview"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:ems="30"
        android:maxLines="1"
        android:background="@drawable/reg_edittext_style"
        android:hint="Address" />


    <Button
        android:id="@+id/addres_activity_next_button"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Next"
        android:textSize="14dp"
        android:layout_marginBottom="125dp"
        android:layout_marginStart="225dp"
        android:background="@drawable/reg_btn_style"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        />

    <Button
        android:id="@+id/addres_activity_back_button"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Back"
        android:textSize="14dp"
        android:layout_marginBottom="125dp"
        android:layout_marginStart="28dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:textColor="#25CCF7"
        android:background="@drawable/reg_btn_style_2"
        />

</RelativeLayout>