<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    app:cardCornerRadius="8dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="8dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/completeWhiteColor"
            android:layout_marginTop="05dp"
            android:layout_marginBottom="05dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="05dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Summary"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        android:textColor="@color/blueBackground"
                        android:textAlignment="center"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="05dp"
                        />

                    <Button
                        android:id="@+id/summary_card_checkout_button"
                        android:layout_width="80dp"
                        android:layout_height="33dp"
                        android:text="Checkout"
                        android:textStyle="bold"
                        android:textColor="@color/completeWhiteColor"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="9dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/checkout_edittext_style"/>

                    <Button
                        android:id="@+id/summary_card_discard_button"
                        android:layout_width="72dp"
                        android:layout_height="33dp"
                        android:text="DISCARD"
                        android:textStyle="bold"
                        android:textColor="@color/completeWhiteColor"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="9dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/discard_button_style"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="06dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INVOICE NUMBER"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="20dp"/>

                    <TextView
                        android:id="@+id/summary_card_invoice_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:hint="- -"
                        android:layout_marginEnd="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"/>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="06dp"
                    android:layout_marginBottom="06dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Items"
                        android:layout_marginStart="20dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        />

                    <TextView
                        android:id="@+id/summary_card_total_items"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="- -"
                        android:textAlignment="textEnd"
                        android:layout_marginEnd="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    ></RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="09dp"
                    android:layout_marginBottom="06dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total :"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="06dp"
                        />

                    <TextView
                        android:id="@+id/summary_card_total_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="-1dp"
                        android:layout_marginEnd="20dp"
                        android:hint="- -"
                        android:textAlignment="textEnd"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                </RelativeLayout>



            </LinearLayout>


        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>