<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    tools:context=".MainActivity"
    >

    <include
        android:id="@+id/main_app_name_toolbar"
        layout="@layout/app_toolbar_layout"
        >
    </include>

    <include
        android:id="@+id/main_company_details_card_view"
        layout="@layout/self_details_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_app_name_toolbar">

    </include>

    <include
        android:id="@+id/count_cardview"
        layout="@layout/information_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="08dp"
        android:layout_marginEnd="08dp"
        android:layout_marginStart="08dp"
        android:layout_marginBottom="08dp"
        android:layout_below="@+id/main_company_details_card_view">

    </include>


    <Button
        android:id="@+id/create_new_bill_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="New Bill"
        android:textSize="14dp"
        android:textColor="@color/completeWhiteColor"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:background="@drawable/create_new_bill_button_style"/>


</RelativeLayout>