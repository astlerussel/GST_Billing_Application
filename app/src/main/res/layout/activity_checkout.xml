<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CheckoutActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground">

    <RelativeLayout
        android:layout_width="1.7dp"
        android:layout_height="match_parent"
        android:background="#49b675"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        ></RelativeLayout>

    <include
        android:id="@+id/checkout_activity_tool_bar"
        layout="@layout/checkout_activity_toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp" />

    <include
        layout="@layout/checkout_activity_total_bill_summary_card_view"
        android:id="@+id/summary_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginStart="07dp"
        android:layout_marginEnd="07dp"
        android:layout_below="@+id/checkout_activity_tool_bar"
        />


    <Button
        android:layout_width="89dp"
        android:layout_height="33dp"
        android:text="Next"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/reg_btn_style"
        />
</RelativeLayout>