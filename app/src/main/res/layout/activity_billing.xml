<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BillingActivity"
    android:background="@color/mainBackground">

    <include
        layout="@layout/calculate_total_mrp_card_view"
        android:id="@+id/summary_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="07dp"
        android:layout_marginEnd="07dp"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_recycler_list"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_above="@+id/billing_add_item_button"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/summary_card_view"
        android:layout_marginTop="2dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        />

    <Button
        android:id="@+id/billing_add_item_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="ADD ITEM"
        android:textSize="14dp"
        android:textColor="@color/completeWhiteColor"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:background="@drawable/create_new_bill_button_style"/>


</RelativeLayout>