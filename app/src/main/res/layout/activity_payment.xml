<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity"
    android:background="@color/mainBackground">

    <RelativeLayout
        android:layout_width="1.7dp"
        android:layout_height="match_parent"
        android:background="#49b675"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        ></RelativeLayout>

    <include
        android:id="@+id/checkout_activity_tool_bar"
        layout="@layout/payment_activity_toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp" />


    <include
        android:id="@+id/payment_card_view"
        layout="@layout/payment_mode_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkout_activity_tool_bar"
        android:layout_marginStart="07dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="07dp" />

</RelativeLayout>